@model SPORSALONUPROJE.Models.Hizmet

<form asp-action="@ViewData["Action"]" method="post">
    <div class="form-group">
        <label asp-for="Ad"></label>
        <input asp-for="Ad" class="form-control" />
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Sure"></label>
        <input asp-for="Sure" class="form-control" placeholder="00:30:00" />
        <span asp-validation-for="Sure" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Ucret"></label>
        <input asp-for="Ucret" class="form-control" />
        <span asp-validation-for="Ucret" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
