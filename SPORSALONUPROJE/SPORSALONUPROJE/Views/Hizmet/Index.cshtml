@model IEnumerable<SPORSALONUPROJE.Models.Hizmet>
@{
    ViewData["Title"] = "Hizmetler";
}

<h2>Hizmet Listesi</h2>

<a asp-action="Ekle" class="btn btn-success mb-2">Yeni Hizmet Ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Süre</th>
            <th>Ücret</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Ad</td>
                <td>@item.Sure</td>
                <td>@item.Ucret ₺</td>
                <td>
                    <a asp-action="Guncelle" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-action="Sil" asp-route-id="@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
