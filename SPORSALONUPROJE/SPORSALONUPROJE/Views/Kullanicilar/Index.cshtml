@model IEnumerable<SPORSALONUPROJE.Models.Uye>

<h2>Kayıtlı Üyeler</h2>

@if (TempData["Hata"] != null)
{
    <div class="alert alert-danger">@TempData["Hata"]</div>
}
@if (TempData["Mesaj"] != null)
{
    <div class="alert alert-success">@TempData["Mesaj"]</div>
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Kayıt Tarihi</th>
            <th>Rol</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var uye in Model)
        {
            <tr>
                <td>@uye.Email</td>
                <td>@uye.UyeOlmaTarihi.ToString("g")</td>
                <td>@uye.Rol</td>
                <td>
                    @if (uye.Rol != "Admin")
                    {
                        <form asp-action="Sil" method="post" asp-route-id="@uye.Id" onsubmit="return confirm('Bu kullanıcıyı silmek istediğinize emin misiniz?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                        </form>
                    }
                    else
                    {
                        <span class="text-muted">Silinemez</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
