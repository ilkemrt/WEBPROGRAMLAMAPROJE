@model SPORSALONUPROJE.ViewModels.AntrenorFormViewModel

<<form asp-action="@ViewData["Action"]" method="post">
    <div class="form-group">
        <label asp-for="AdSoyad"></label>
        <input asp-for="AdSoyad" class="form-control" />
        <span asp-validation-for="AdSoyad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Aciklama"></label>
        <textarea asp-for="Aciklama" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>Hizmetler</label>
        <div class="form-check">
            @foreach (var hizmet in Model.MevcutHizmetler)
            {
                <div>
                    <input type="checkbox"
                           name="SecilenHizmetler"
                           value="@hizmet.Id"
                           @(Model.SecilenHizmetler != null && Model.SecilenHizmetler.Contains(hizmet.Id) ? "checked" : "") />
                    @hizmet.Ad (@hizmet.Sure) - @hizmet.Ucret ₺
                </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
