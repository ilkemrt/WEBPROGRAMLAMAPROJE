@model IEnumerable<SPORSALONUPROJE.Models.AntrenorMusaitlik>

@{
    ViewData["Title"] = "Müsaitlik Saatleri";
}

<h2>@ViewBag.AntrenorAd - Müsaitlik Saatleri</h2>

<a asp-action="Ekle" asp-route-antrenorId="@ViewBag.AntrenorId" class="btn btn-success mb-2">Yeni Saat Ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Gün</th>
            <th>Başlangıç</th>
            <th>Bitiş</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.Gun</td>
                <td>@m.BaslangicSaat</td>
                <td>@m.BitisSaat</td>
                <td>
                    <a asp-action="Sil" asp-route-id="@m.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
