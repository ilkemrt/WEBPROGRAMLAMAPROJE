@model Service

<div class="container mt-4">
    <div class="row">

        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid rounded" style="object-fit: cover; height: 350px;" />
        </div>

        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <p>@Model.Description</p>

            <p>
                <b>Süre:</b> @Model.Duration dk <br />
                <b>Fiyat:</b> @Model.Price ₺
            </p>

            @if (User.Identity.IsAuthenticated)
            {
                <a asp-controller="Appointment" asp-action="Create" asp-route-serviceId="@Model.Id"
                   class="btn btn-success btn-lg">Randevu Al</a>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg">
                    Giriş Yap & Randevu Al
                </a>
            }
        </div>

    </div>
</div>
