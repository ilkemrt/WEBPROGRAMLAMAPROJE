<section class="hero-section d-flex align-items-center">
    <div class="overlay"></div>

    <div class="container position-relative text-white">
        <div class="row">
            <div class="col-lg-8">
                <h1 class="display-1 fw-bold mb-4">
                    Gücünü <span class="text-accent">Kontrol Et</span>
                </h1>

                <p class="fs-4 text-light mb-4">
                    Profesyonel eğitmenler, akıllı sistemler ve sana özel programlarla
                    gerçek değişimi başlat.
                </p>

                <div class="d-flex gap-3 flex-wrap">
                    <a asp-controller="Service" asp-action="Index"
                       class="btn btn-accent btn-lg px-5 py-3">
                        Hizmetleri İncele
                    </a>

                    <a asp-controller="Trainer" asp-action="Index"
                       class="btn btn-outline-light btn-lg px-5 py-3">
                        Antrenörler
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="py-5 bg-dark text-white">
    <div class="container">
        <h2 class="fw-bold text-center mb-5">
            Fitness Center Farkı
        </h2>

        <div class="row g-5 text-center">
            <div class="col-md-4">
                <h4 class="fw-bold mb-3">Uzman Eğitmenler</h4>
                <p class="text-secondary">
                    Sertifikalı, deneyimli ve sonuç odaklı profesyoneller
                </p>
            </div>

            <div class="col-md-4">
                <h4 class="fw-bold mb-3">Akıllı Randevu Sistemi</h4>
                <p class="text-secondary">
                    Antrenör, gün ve saatini saniyeler içinde seç
                </p>
            </div>

            <div class="col-md-4">
                <h4 class="fw-bold mb-3">Fitness AI</h4>
                <p class="text-secondary">
                    Vücuduna özel programlar üreten akıllı sistem
                </p>
            </div>
        </div>
    </div>
</section>
<section class="py-5">
    <div class="container">
        <h2 class="fw-bold text-center mb-5">Nasıl Çalışır?</h2>

        <div class="row text-center g-4">
            <div class="col-md-4">
                <div class="p-4 shadow rounded">
                    <h1 class="fw-bold text-accent">01</h1>
                    <h5 class="fw-bold">Üye Ol</h5>
                    <p class="text-muted">Hızlı ve ücretsiz kayıt</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="p-4 shadow rounded">
                    <h1 class="fw-bold text-accent">02</h1>
                    <h5 class="fw-bold">Seçimini Yap</h5>
                    <p class="text-muted">Hizmet ve antrenörünü belirle</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="p-4 shadow rounded">
                    <h1 class="fw-bold text-accent">03</h1>
                    <h5 class="fw-bold">Başla</h5>
                    <p class="text-muted">Randevunu al ve antrenmana başla</p>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="py-5 text-center bg-dark text-white">
    <h2 class="fw-bold mb-3">
        Değişim Bir Kararla Başlar
    </h2>
    <p class="fs-5 text-secondary mb-4">
        Bugün başla, yarın teşekkür et
    </p>

    @if (!User.Identity.IsAuthenticated)
    {
        <a asp-controller="Account" asp-action="Register"
           class="btn btn-accent btn-lg px-5 py-3">
            Ücretsiz Üye Ol
        </a>
    }
</section>
