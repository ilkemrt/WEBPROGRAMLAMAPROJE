@model IEnumerable<Trainer>

<h2 class="text-center fw-bold mb-5">Profesyonel Antrenörlerimiz</h2>

<div class="row g-4">
    @foreach (var t in Model)
    {
        <div class="col-xl-3 col-lg-4 col-md-6">
            <div class="trainer-card">

                <div class="trainer-image">
                    <img src="@t.ImageUrl" alt="@t.FirstName" />
                    <span class="trainer-badge">@t.Service?.Name</span>
                </div>

                <div class="trainer-body">
                    <h4 class="fw-bold mb-1">@t.FirstName @t.LastName</h4>
                    <p class="text-muted small mb-3">
                        @t.Service?.Name Eğitmeni
                    </p>

                    <p class="trainer-bio">
                        @t.Biography
                    </p>

                    <div class="trainer-actions">
                        <a asp-controller="Trainer"
                           asp-action="Details"
                           asp-route-id="@t.Id"
                           class="btn btn-outline-dark btn-sm">
                            Profil
                        </a>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-controller="Appointment"
                               asp-action="CreateByTrainer"
                               asp-route-trainerId="@t.Id"
                               class="btn btn-accent btn-sm">
                                Randevu Al
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Account"
                               asp-action="Login"
                               class="btn btn-accent btn-sm">
                                Giriş Yap ve Randevu Al
                            </a>
                        }
                    </div>
                </div>

            </div>
        </div>
    }
</div>
