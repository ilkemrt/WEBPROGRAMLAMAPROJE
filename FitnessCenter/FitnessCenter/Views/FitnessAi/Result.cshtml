@model FitnessCenter.Web.Models.Ai.AiWorkoutPlan

@{
    ViewData["Title"] = "Plan Sonucu";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="mb-0">@Model.Title</h2>
            <p class="text-muted mb-0">@Model.Notes</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">Yeni Plan</a>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card p-3 shadow-sm">
                <div class="text-muted">Kalori</div>
                <div class="fs-4 fw-bold">@Model.Nutrition.DailyCalories</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-3 shadow-sm">
                <div class="text-muted">Protein (g)</div>
                <div class="fs-4 fw-bold">@Model.Nutrition.ProteinGr</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-3 shadow-sm">
                <div class="text-muted">Karbonhidrat (g)</div>
                <div class="fs-4 fw-bold">@Model.Nutrition.CarbsGr</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-3 shadow-sm">
                <div class="text-muted">Yağ (g)</div>
                <div class="fs-4 fw-bold">@Model.Nutrition.FatGr</div>
            </div>
        </div>
    </div>

    <div class="card p-3 shadow-sm mb-4">
        <h5>Örnek Öğün Fikirleri</h5>
        <ul class="mb-0">
            @foreach (var m in Model.Nutrition.MealIdeas)
            {
                <li>@m</li>
            }
        </ul>
    </div>

    <h4 class="mb-3">Haftalık Antrenman Planı</h4>

    <div class="accordion" id="planAcc">
        @for (int i = 0; i < Model.WeeklyPlan.Count; i++)
        {
            var day = Model.WeeklyPlan[i];
            var headingId = $"h{i}";
            var collapseId = $"c{i}";

            <div class="accordion-item">
                <h2 class="accordion-header" id="@headingId">
                    <button class="accordion-button @(i == 0 ? "" : "collapsed")" type="button"
                            data-bs-toggle="collapse" data-bs-target="#@collapseId">
                        @day.Day — <span class="ms-2 text-muted">@day.Focus</span>
                    </button>
                </h2>

                <div id="@collapseId" class="accordion-collapse collapse @(i == 0 ? "show" : "")"
                     data-bs-parent="#planAcc">
                    <div class="accordion-body">
                        @if (!string.IsNullOrWhiteSpace(day.Cardio))
                        {
                            <div class="alert alert-info">
                                <b>Kardiyo:</b> @day.Cardio
                            </div>
                        }

                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Egzersiz</th>
                                        <th>Set</th>
                                        <th>Tekrar</th>
                                        <th>Dinlenme (sn)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var ex in day.Exercises)
                                    {
                                        <tr>
                                            <td>@ex.Name</td>
                                            <td>@ex.Sets</td>
                                            <td>@ex.Reps</td>
                                            <td>@ex.RestSec</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
