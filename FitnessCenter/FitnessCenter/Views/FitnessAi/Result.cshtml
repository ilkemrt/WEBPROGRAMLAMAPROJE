@model FitnessCenter.Web.Models.Ai.AiWorkoutPlan

@{
    ViewData["Title"] = "AI Plan Sonucu";
}

<div class="container my-5">

    <!-- HEADER -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-5">
        <div>
            <h1 class="fw-bold display-6 mb-1">📋 @Model.Title</h1>
            <p class="text-muted fs-5">@Model.Notes</p>
        </div>

        <a asp-action="Index" class="btn btn-outline-secondary btn-lg mt-3 mt-md-0">
            🔄 Yeni Plan Oluştur
        </a>
    </div>

    <!-- NUTRITION SUMMARY -->
    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center p-4 h-100">
                <div class="text-muted mb-1">🔥 Günlük Kalori</div>
                <div class="display-6 fw-bold text-success">
                    @Model.Nutrition.DailyCalories
                </div>
                <div class="small text-muted">kcal</div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center p-4 h-100">
                <div class="text-muted mb-1">💪 Protein</div>
                <div class="display-6 fw-bold">@Model.Nutrition.ProteinGr</div>
                <div class="small text-muted">gram</div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center p-4 h-100">
                <div class="text-muted mb-1">⚡ Karbonhidrat</div>
                <div class="display-6 fw-bold">@Model.Nutrition.CarbsGr</div>
                <div class="small text-muted">gram</div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center p-4 h-100">
                <div class="text-muted mb-1">🥑 Yağ</div>
                <div class="display-6 fw-bold">@Model.Nutrition.FatGr</div>
                <div class="small text-muted">gram</div>
            </div>
        </div>
    </div>

    <!-- MEAL IDEAS -->
    <div class="card shadow-sm border-0 p-4 mb-5">
        <h4 class="fw-bold mb-3">🍽️ Örnek Öğün Fikirleri</h4>

        <ul class="list-group list-group-flush">
            @foreach (var m in Model.Nutrition.MealIdeas)
            {
                <li class="list-group-item fs-5">
                    ✔️ @m
                </li>
            }
        </ul>
    </div>

    <!-- WORKOUT PLAN -->
    <h3 class="fw-bold mb-4">🏋️ Haftalık Antrenman Programı</h3>

    <div class="accordion accordion-flush" id="planAcc">
        @for (int i = 0; i < Model.WeeklyPlan.Count; i++)
        {
            var day = Model.WeeklyPlan[i];
            var headingId = $"heading{i}";
            var collapseId = $"collapse{i}";

            <div class="accordion-item mb-3 shadow-sm border rounded">
                <h2 class="accordion-header" id="@headingId">
                    <button class="accordion-button @(i == 0 ? "" : "collapsed") fw-bold"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#@collapseId">
                        📆 @day.Day
                        <span class="ms-3 badge bg-success">@day.Focus</span>
                    </button>
                </h2>

                <div id="@collapseId"
                     class="accordion-collapse collapse @(i == 0 ? "show" : "")"
                     data-bs-parent="#planAcc">

                    <div class="accordion-body">

                        @if (!string.IsNullOrWhiteSpace(day.Cardio))
                        {
                            <div class="alert alert-info fw-semibold">
                                ❤️ Kardiyo: @day.Cardio
                            </div>
                        }

                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Egzersiz</th>
                                        <th>Set</th>
                                        <th>Tekrar</th>
                                        <th>Dinlenme (sn)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var ex in day.Exercises)
                                    {
                                        <tr>
                                            <td class="fw-semibold">@ex.Name</td>
                                            <td>@ex.Sets</td>
                                            <td>@ex.Reps</td>
                                            <td>@ex.RestSec</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>

</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
