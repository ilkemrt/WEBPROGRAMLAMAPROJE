@model FitnessCenter.Web.Models.ViewModels.AiTrainerRequestVm

@{
    ViewData["Title"] = "Fitness AI";
}

<div class="container my-5">

    <!-- HEADER -->
    <div class="text-center mb-5">
        <h1 class="fw-bold display-5">🤖 AI Personal Trainer</h1>
        <p class="text-muted fs-5 mt-2">
            Bilgilerini gir, sana özel <b>antrenman</b> ve <b>beslenme planını</b> oluşturalım
        </p>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger text-center">
            <b>Hata:</b> @ViewBag.Error
        </div>
    }

    <!-- FORM CARD -->
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-9">
            <form asp-action="GeneratePlan" method="post" class="card shadow-lg border-0 p-4 p-md-5">
                @Html.AntiForgeryToken()

                <!-- FİZİKSEL BİLGİLER -->
                <h4 class="fw-bold mb-4">📊 Fiziksel Bilgiler</h4>

                <div class="row g-3 mb-4">
                    <div class="col-md-3">
                        <label class="form-label">Yaş</label>
                        <input asp-for="Age" class="form-control form-control-lg" />
                        <span asp-validation-for="Age" class="text-danger small"></span>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Boy (cm)</label>
                        <input asp-for="HeightCm" class="form-control form-control-lg" />
                        <span asp-validation-for="HeightCm" class="text-danger small"></span>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Kilo (kg)</label>
                        <input asp-for="WeightKg" class="form-control form-control-lg" />
                        <span asp-validation-for="WeightKg" class="text-danger small"></span>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Yağ Oranı (%)</label>
                        <input asp-for="BodyFatPercent" class="form-control form-control-lg" />
                        <span asp-validation-for="BodyFatPercent" class="text-danger small"></span>
                    </div>
                </div>

                <hr class="my-4" />

                <!-- HEDEF & SEVİYE -->
                <h4 class="fw-bold mb-4">🎯 Hedef & Seviye</h4>

                <div class="row g-3 mb-5">
                    <div class="col-md-4">
                        <label class="form-label">Hedef</label>
                        <select asp-for="Goal" class="form-select form-select-lg">
                            <option value="LoseFat">🔥 Kilo Verme</option>
                            <option value="GainMuscle">💪 Kas Kazanma</option>
                            <option value="Fit">⚡ Fit Kalma</option>
                        </select>
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">Haftada kaç gün spor?</label>
                        <select asp-for="WorkoutDaysPerWeek" class="form-select form-select-lg">
                            <option value="2">2 Gün</option>
                            <option value="3" selected>3 Gün</option>
                            <option value="4">4 Gün</option>
                            <option value="5">5 Gün</option>
                            <option value="6">6 Gün</option>
                        </select>
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">Seviye</label>
                        <select asp-for="Experience" class="form-select form-select-lg">
                            <option value="Beginner">🟢 Başlangıç</option>
                            <option value="Intermediate">🟡 Orta</option>
                            <option value="Advanced">🔴 İleri</option>
                        </select>
                    </div>
                </div>

                <!-- SUBMIT -->
                <button type="submit" class="btn btn-success btn-lg w-100 py-3 fw-bold">
                    🚀 Planımı Oluştur
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
