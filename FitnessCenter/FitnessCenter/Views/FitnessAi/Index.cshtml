@model FitnessCenter.Web.Models.ViewModels.AiTrainerRequestVm

@{
    ViewData["Title"] = "Fitness AI";
}

<div class="container">
    <h2 class="mb-3">AI Personal Trainer</h2>
    <p class="text-muted">Bilgilerini gir, sana özel antrenman + beslenme planı oluşturalım.</p>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            <b>Hata:</b> @ViewBag.Error
        </div>
    }

    <form asp-action="GeneratePlan" method="post" class="card p-4 shadow-sm">
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-3 mb-3">
                <label class="form-label">Yaş</label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <div class="col-md-3 mb-3">
                <label class="form-label">Boy (cm)</label>
                <input asp-for="HeightCm" class="form-control" />
                <span asp-validation-for="HeightCm" class="text-danger"></span>
            </div>

            <div class="col-md-3 mb-3">
                <label class="form-label">Kilo (kg)</label>
                <input asp-for="WeightKg" class="form-control" />
                <span asp-validation-for="WeightKg" class="text-danger"></span>
            </div>

            <div class="col-md-3 mb-3">
                <label class="form-label">Yağ Oranı (%)</label>
                <input asp-for="BodyFatPercent" class="form-control" />
                <span asp-validation-for="BodyFatPercent" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 mb-3">
                <label class="form-label">Hedef</label>
                <select asp-for="Goal" class="form-select">
                    <option value="LoseFat">Kilo Verme</option>
                    <option value="GainMuscle">Kas Kazanma</option>
                    <option value="Fit">Fit Kalma</option>
                </select>
            </div>

            <div class="col-md-4 mb-3">
                <label class="form-label">Haftada kaç gün spor?</label>
                <select asp-for="WorkoutDaysPerWeek" class="form-select">
                    <option value="2">2</option>
                    <option value="3" selected>3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                </select>
            </div>

            <div class="col-md-4 mb-3">
                <label class="form-label">Seviye</label>
                <select asp-for="Experience" class="form-select">
                    <option value="Beginner">Başlangıç</option>
                    <option value="Intermediate">Orta</option>
                    <option value="Advanced">İleri</option>
                </select>
            </div>
        </div>

        <button class="btn btn-success w-100">
            Planı Oluştur
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
