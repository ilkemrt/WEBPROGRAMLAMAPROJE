<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Fitness Center</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        .navbar {
            background: linear-gradient(90deg, #0f2027, #203a43, #2c5364);
        }

        .navbar-brand {
            font-weight: 700;
            letter-spacing: 1px;
        }

        .nav-link {
            color: #eaeaea !important;
            font-weight: 500;
            margin-right: 10px;
            transition: all .2s ease;
        }

            .nav-link:hover {
                color: #00e5ff !important;
                transform: translateY(-1px);
            }

        .btn-nav {
            border-radius: 30px;
            padding: 6px 18px;
            font-weight: 500;
        }

        .hero-section {
            height: 90vh;
            background: linear-gradient( rgba(15,32,39,0.75), rgba(15,32,39,0.85) ), url('https://images.pexels.com/photos/1552242/pexels-photo-1552242.jpeg');
            background-size: cover;
            background-position: center;
            position: relative;
        }

        .text-accent {
            color: #00e5ff;
        }

        .btn-accent {
            background-color: #00e5ff;
            color: #000;
            border-radius: 40px;
            font-weight: 600;
        }

            .btn-accent:hover {
                background-color: #00bcd4;
                color: #000;
            }

        .trainer-card {
            background: #fff;
            border-radius: 18px;
            overflow: hidden;
            box-shadow: 0 15px 35px rgba(0,0,0,0.08);
            transition: all .35s ease;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

            .trainer-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 30px 60px rgba(0,0,0,0.15);
            }

        .trainer-image {
            position: relative;
            height: 280px;
            overflow: hidden;
        }

            .trainer-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform .4s ease;
            }

        .trainer-card:hover .trainer-image img {
            transform: scale(1.08);
        }

        .trainer-badge {
            position: absolute;
            bottom: 15px;
            left: 15px;
            background: #00e5ff;
            color: #000;
            padding: 6px 14px;
            font-size: 0.8rem;
            font-weight: 600;
            border-radius: 20px;
        }

        .trainer-body {
            padding: 20px;
            display: flex;
            flex-direction: column;
            flex-grow: 1;
        }

        .trainer-bio {
            font-size: 0.9rem;
            color: #555;
            flex-grow: 1;
        }

        .trainer-actions {
            display: flex;
            justify-content: space-between;
            gap: 10px;
            margin-top: 15px;
        }

        .btn-accent {
            background-color: #00e5ff;
            border: none;
            color: #000;
            font-weight: 600;
            border-radius: 30px;
        }

            .btn-accent:hover {
                background-color: #00bcd4;
                color: #000;
            }

        .trainer-detail-hero {
            position: relative;
            min-height: 80vh;
            background-image: url("https://images.pexels.com/photos/1552242/pexels-photo-1552242.jpeg");
            background-size: cover;
            background-position: center;
            padding: 80px 0;
        }

            .trainer-detail-hero .overlay {
                position: absolute;
                inset: 0;
                background: rgba(0,0,0,0.75);
            }

        .trainer-profile-img {
            width: 280px;
            height: 280px;
            margin: auto;
            border-radius: 50%;
            overflow: hidden;
            border: 6px solid #00e5ff;
            box-shadow: 0 25px 50px rgba(0,0,0,.5);
        }

            .trainer-profile-img img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .trainer-detail-badge {
            display: inline-block;
            background: #00e5ff;
            color: #000;
            padding: 8px 18px;
            border-radius: 30px;
            font-weight: 600;
            font-size: .9rem;
        }

        .btn-accent {
            background-color: #00e5ff;
            color: #000;
            border-radius: 40px;
            font-weight: 600;
            border: none;
        }

            .btn-accent:hover {
                background-color: #00bcd4;
                color: #000;
            }



    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark shadow-sm sticky-top">
        <div class="container">

            <!-- LOGO -->
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <i class="bi bi-lightning-charge-fill text-warning fs-4 me-2"></i>
                Fitness Center
            </a>

            <!-- MOBILE -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">

                <!-- LEFT -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Service" asp-action="Index">
                            <i class="bi bi-grid me-1"></i> Hizmetler
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Trainer" asp-action="Index">
                            <i class="bi bi-people me-1"></i> Antrenörler
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="FitnessAi" asp-action="Index">
                            <i class="bi bi-cpu me-1"></i> Fitness AI
                        </a>
                    </li>
                </ul>

                <!-- RIGHT -->
                <ul class="navbar-nav align-items-lg-center">

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item me-2">
                            <a class="nav-link" asp-controller="Appointment" asp-action="MyAppointments">
                                <i class="bi bi-calendar-check me-1"></i> Randevularım
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="btn btn-outline-danger btn-nav"
                               asp-controller="Account"
                               asp-action="Logout">
                                <i class="bi bi-box-arrow-right me-1"></i> Çıkış
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item me-2">
                            <a class="btn btn-outline-light btn-nav"
                               asp-controller="Account"
                               asp-action="Login">
                                Giriş
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="btn btn-warning btn-nav text-dark"
                               asp-controller="Account"
                               asp-action="Register">
                                Kayıt Ol
                            </a>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
