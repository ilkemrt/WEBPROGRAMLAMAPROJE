@model FitnessCenter.Web.Models.ViewModels.TrainerEditViewModel

@{
    ViewData["Title"] = "Antrenör Düzenle";
}

<h2 class="mb-4">Antrenör Düzenle</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <!-- AD -->
    <div class="mb-3">
        <label class="form-label">Ad</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <!-- SOYAD -->
    <div class="mb-3">
        <label class="form-label">Soyad</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <!-- BİYOGRAFİ -->
    <div class="mb-3">
        <label class="form-label">Biyografi</label>
        <textarea asp-for="Biography" class="form-control" rows="4"></textarea>
    </div>

    <!-- FOTO -->
    <div class="mb-3">
        <label class="form-label">Fotoğraf URL</label>
        <input asp-for="ImageUrl" class="form-control" />
    </div>

    <!-- HİZMET -->
    <div class="mb-3">
        <label class="form-label">Hizmet</label>
        <select asp-for="ServiceId" asp-items="ViewBag.Services" class="form-select"></select>
        <span asp-validation-for="ServiceId" class="text-danger"></span>
    </div>

    <hr />

    <!-- ÇALIŞMA GÜNLERİ -->
    <div class="mb-3">
        <label class="form-label fw-bold">Çalışma Günleri</label>

        <div class="row">
            @foreach (DayOfWeek day in Enum.GetValues(typeof(DayOfWeek)))
            {
                <div class="col-md-3">
                    <div class="form-check">
                        <input class="form-check-input"
                               type="checkbox"
                               value="@day"
                               name="WorkingDays"
                               @(Model.WorkingDays.Contains(day) ? "checked" : "") />
                        <label class="form-check-label">
                            @day
                        </label>
                    </div>
                </div>
            }
        </div>

        <span asp-validation-for="WorkingDays" class="text-danger"></span>
    </div>

    <!-- ÇALIŞMA SAATLERİ -->
    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="form-label">Başlangıç Saati</label>
            <input asp-for="StartTime" type="time" class="form-control" />
            <span asp-validation-for="StartTime" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Bitiş Saati</label>
            <input asp-for="EndTime" type="time" class="form-control" />
            <span asp-validation-for="EndTime" class="text-danger"></span>
        </div>
    </div>

    <!-- BUTONLAR -->
    <div class="mt-4">
        <button type="submit" class="btn btn-success">
            Güncelle
        </button>

        <a asp-action="Index" class="btn btn-secondary ms-2">
            Vazgeç
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
