@using FitnessCenter.Web.Models
@model IEnumerable<Appointment>

<h2>Randevular</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Üye</th>
            <th>Antrenör</th>
            <th>Hizmet</th>
            <th>Tarih</th>
            <th>Durum</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Member.FirstName @item.Member.LastName (@item.Member.Id)</td>
                <td>@item.Trainer.FirstName @item.Trainer.LastName</td>
                <td>@item.Service.Name</td>
                <td>@item.StartTime.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    @if (item.Status == AppointmentStatus.Pending)
                    {
                        <span class="badge bg-warning">Beklemede</span>
                    }
                    else if (item.Status == AppointmentStatus.Approved)
                    {
                        <span class="badge bg-success">Onaylandı</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Reddedildi</span>
                    }
                </td>

                <td>
                    @if (item.Status == AppointmentStatus.Pending)
                    {
                        <a asp-action="Approve" asp-route-id="@item.Id" class="btn btn-success btn-sm">Onayla</a>
                        <a asp-action="Reject" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Reddet</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
